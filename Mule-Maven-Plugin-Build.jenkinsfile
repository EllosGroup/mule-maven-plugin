pipeline {
    options {
        timeout(time: 1, unit: 'HOURS')
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
     tools {
        jdk 'JDK8'
        maven 'M3'
    }
    agent {
        label 'ubuntu-14.04'
    }

    stages {
        stage('Build') {
            steps {
                configFileProvider([configFile(fileId: '4057b0ee-030f-42f3-9616-964c557a8752', variable: 'MAVEN_SETTINGS')]) {
                    sh 'mvn -s $MAVEN_SETTINGS clean install -DskipIntegrationTests=true'
                }
            }
        }
        stage('Deploy') {
            steps {
                configFileProvider([configFile(fileId: '4057b0ee-030f-42f3-9616-964c557a8752', variable: 'MAVEN_SETTINGS')]) {
                    sh 'mvn -s $MAVEN_SETTINGS deploy -DskipTests'
                }
            }
        }
        stage('Packager IT') {
            steps {
                configFileProvider([configFile(fileId: '4057b0ee-030f-42f3-9616-964c557a8752', variable: 'MAVEN_SETTINGS')]) {
                    sh 'mvn -s $MAVEN_SETTINGS test -PpackagerIT'
                }
            }
        }
        stage('Deployer IT') {
            steps {
                configFileProvider([configFile(fileId: '4057b0ee-030f-42f3-9616-964c557a8752', variable: 'MAVEN_SETTINGS')]) {
                    withCredentials([usernamePassword(credentialsId: 'mmp-tests', passwordVariable: 'mmp-password', usernameVariable: 'mmp-user')]) {
                        sh 'mvn -s $MAVEN_SETTINGS test -PdeployerIT -Dusername=$mmp-user -Dpassword=$mmp-password'
                    }
                }
            }
        }
    }
    post {
        cleanup {
            cleanWs()
        }
    }
}